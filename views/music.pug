extends layout.pug

block vars
	- var applyNoContentStyles = true

block scripts
	script(type="text/javascript", src="/js/search.js")
	script(type="text/javascript", src="/js/playback.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/fuse.js/3.0.4/fuse.min.js")
	script.
		document.addEventListener('DOMContentLoaded', function() {
		var filterTitles = document.querySelectorAll('.filterTitle');

		filterTitles.forEach(function(filterTitle) {
			filterTitle.addEventListener('click', function() {
				var dropdown = this.nextElementSibling;
				dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
			});
		});

		document.addEventListener('click', function(event) {
			filterTitles.forEach(function(filterTitle) {
				var dropdown = filterTitle.nextElementSibling;
				if (!filterTitle.contains(event.target) && !dropdown.contains(event.target)) {
					dropdown.style.display = 'none';
				}
			});
		});
		});

